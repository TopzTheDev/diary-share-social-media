<div class="row pd-2">
    <h1 class="mb-2 ml-3 heading--secondary">Your Diaries</h1>
    <div class="flex">
        {{#each newDiaries}}
        <div class="flex-col">
            <div class="card">
                <div class="card__left">
                    <div class="card__top">
                        <div class="card__holder">
                            <img src="/image/img-{{rand}}.jpg" class="card__img" id="img-post">
                        </div>
                    </div>

                    <div class="card__bottom">
                        <div class="card__date">
                            <h1 class="card__day">
                                {{day}}
                            </h1>

                            <h2 class="card__month">
                                {{month}}
                            </h2>
                        </div>

                        <div class="card__tray">
                            <a href="" class="btn--link"><i class="far fa-comment-alt" title="comments"></i></a>
                            <a href="" class="btn--link"><i class="far fa-heart" title="Like"></i></a>
                            <a href="/diaries/edit/{{id}}" class="btn--link"><i class="far fa-edit" title="Edit"></i></a>
                            <a href="/diaries/delete/{{id}}" class="btn--link"><i class="far fa-trash-alt" title="Delete"></i></a>
                        </div>
                    </div>

                </div>

                <div class="card__right">

                    <h1 class="card__heading">
                        <span class="card__heading_span">
                            {{truncate title 45}}
                        </span>
                    </h1>

                    <div class="card__profile">
                        <div class="card__profile-img-holder">
                            <img src="{{user.image}}" alt="" class="card__profile-img">
                        </div>

                        <h4 class="card__profile-name">
                            {{user.firstName}} {{user.lastName}}
                        </h4>
                    </div>

                    <a href="/diaries/show/{{id}}" class="btn btn--secondary card__view" title="View Diary Content" id="btn-view"><i class="fa fa-angle-right"></i></a>
                </div>
            </div>
        </div>
        {{else}}

        {{/each}}
    </div>

</div>
